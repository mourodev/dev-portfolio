---
type Props = {
	title: string
	body?: string
	href: string
	image: string
}

const { href, title, body, image } = Astro.props
---

<a href={href} class="project-card">
	<picture>
		<img src={image} alt="Imagem do projeto" />
	</picture>

	<strong>{title}</strong>
	<div>
		<span>{body}</span>
	</div>
</a>

<style>
	.project-card {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-decoration: none;
		row-gap: var(--space-sm);
		width: 100%;
		border-radius: var(--border-radius-md);
		border: 1px solid var(--border-color);
		padding-bottom: var(--space-sm);
		overflow: hidden;

		transition: all 0.3s;
	}

	.project-card picture {
		width: 100%;
		height: 200px;
		overflow: hidden;

		border-radius: var(--border-radius-md) var(--border-radius-md) 0 0;
	}

	.project-card img {
		object-fit: cover;
		object-position: center;
		width: 100%;
		height: 100%;
		transition: all 0.3s;
	}

	.project-card strong {
		color: var(--text-color);
		font-weight: 600;
		padding-top: 0 var(--space-sm);
		text-align: center;
		transition: all 0.3s;
	}

	.project-card div {
		display: flex;
		gap: var(--space-sm);
		flex-wrap: wrap;
		margin-top: auto;
	}

	.project-card div span {
		color: var(--paragraph-color);
		font-size: var(--font-size-sm);
		font-weight: 300;
		padding: var(--space-xs) var(--space-sm);

		text-align: center;
	}

	.project-card:hover picture img {
		scale: 1.1;
	}

	.project-card:hover strong {
		color: var(--primary-color);
	}
</style>
